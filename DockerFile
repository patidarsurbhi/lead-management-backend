# ===============================
# Build stage
# ===============================
FROM maven:3.8.8-openjdk-17 AS build
WORKDIR /app
COPY . .
RUN mvn clean package -DskipTests

# ===============================
# Run stage
# ===============================
FROM eclipse-temurin:17-jdk
WORKDIR /app
COPY --from=build /app/target/Dev-Kripa-Fincrop-0.0.1-SNAPSHOT.jar app.jar

EXPOSE 8080
ENTRYPOINT ["java","-jar","app.jar"]
